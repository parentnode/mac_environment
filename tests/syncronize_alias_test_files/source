# Apache and mysql shortcuts
"alias sites" alias sites="cd /srv/sites"
"alias apache" alias apache="sudo /opt/local/sbin/apachectl"
"alias mysql" alias mysql="sudo /opt/local/lib/mariadb-10.5/bin/mysql"
"alias mysqld" alias mysqld="sudo /opt/local/share/mariadb-10.5/support-files/mysql.server"
"alias mysql_dump_all" alias mysql_dump_all="php /srv/tools/scripts/mysql_dump_all.php"
"alias mysql_grant" alias mysql_grant="php /srv/tools/scripts/mysql_grant.php"
"alias enable_site" alias enable_site="/srv/tools/scripts/enable_site.sh"


# Cleanup shortcuts
"alias no_ds" alias no_ds="find . -name '*.DS_Store' -type f -delete"


# zip shortcut
"alias zipmac" alias zipmac="zip -r zip . -x \*.DS*"
"alias zipit" alias zipit="zip -r zip . -x \*.svn* \*.git* \*.DS*"
"alias zipitm" alias zipitm="zip -r zip . -x \*.svn* \*.git* \*.DS* \*js/lib/* \*css/lib/*"


# git tools 
"alias git_status" alias git_status="php /srv/tools/scripts/git_status.php"

